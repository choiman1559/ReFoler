<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/round_corner"
    android:backgroundTint="@color/ui_bg_surface"
    android:paddingVertical="8dp">

    <RelativeLayout
        android:id="@+id/baseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription">

        <ImageView
            android:id="@+id/deviceIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_fluent_phone_24_regular"
            app:tint="@color/ui_fg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="74dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans"
                android:gravity="start|center"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/ui_fg"
                android:textSize="20sp"
                tools:text="TestDevice NotePad 14 Pro Plus" />

            <TextView
                android:id="@+id/deviceThis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans"
                android:gravity="start|center"
                android:maxEms="10"
                android:singleLine="true"
                android:textColor="@color/ui_fg"
                android:textSize="16sp"
                android:text="@string/search_device_this_device" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>